<h1>Articles</h1>
<p>
    <%= link_to 'Create Article', controller: 'articles', action: 'new' %>
</p>
<table>
    <tr>
        <th>Title</th>
        <th>Content</th>
    </tr>
    <% @articles.each do |article| %>
        <tr>
            <td><%= link_to article.title, controller: 'articles', action: 'show', id: article.id %></td>
            <td><%= article.content %></td>
            <td><%= link_to 'Edit', controller: 'articles', action: 'edit', id: article.id %></td>
            <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>
