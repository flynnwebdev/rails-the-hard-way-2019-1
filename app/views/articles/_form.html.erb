<%= form_for(article) do |f| %>
    <% if article.errors.any? %>
    <ul class="errors">
        <% for error in article.errors.full_messages %>
            <li><%= error %></li>
        <% end %>
    </ul>
    <% end %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :content %><br>
        <%= f.text_area :content %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
